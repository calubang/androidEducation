<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:columnCount="5"
    android:rowCount="9"
    android:padding="10dp"
    tools:context=".Ex52Activity">

    <EditText
        android:id="@+id/et_first"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_columnWeight="5"
        android:layout_gravity="fill_horizontal"
        android:enabled="false"
        android:hint="첫번째 값"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/et_second"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_columnWeight="5"
        android:layout_gravity="fill_horizontal"
        android:editable="false"
        android:hint="두번째 값"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_num1"
        android:layout_row="2"
        android:layout_column="0"
        android:text="1"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/holo_green_light"
        android:onClick="btnNumClick"/>
    <Button
        android:id="@+id/btn_num2"
        android:layout_row="2"
        android:layout_column="1"
        android:text="2"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/holo_green_light"
        android:onClick="btnNumClick"/>
    <Button
        android:id="@+id/btn_num3"
        android:layout_row="2"
        android:layout_column="2"
        android:text="3"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/holo_green_light"
        android:onClick="btnNumClick"/>
    <Button
        android:id="@+id/btn_num4"
        android:layout_row="2"
        android:layout_column="3"
        android:text="4"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/holo_green_light"
        android:onClick="btnNumClick"/>
    <Button
        android:id="@+id/btn_num5"
        android:layout_row="2"
        android:layout_column="4"
        android:text="5"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/holo_green_light"
        android:onClick="btnNumClick"/>

    <Button
        android:id="@+id/btn_num6"
        android:layout_row="3"
        android:layout_column="0"
        android:text="6"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/holo_green_light"
        android:onClick="btnNumClick"/>
    <Button
        android:id="@+id/btn_num7"
        android:layout_row="3"
        android:layout_column="1"
        android:text="7"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/holo_green_light"
        android:onClick="btnNumClick"/>
    <Button
        android:id="@+id/btn_num8"
        android:layout_row="3"
        android:layout_column="2"
        android:text="8"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/holo_green_light"
        android:onClick="btnNumClick"/>
    <Button
        android:id="@+id/btn_num9"
        android:layout_row="3"
        android:layout_column="3"
        android:text="9"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/holo_green_light"
        android:onClick="btnNumClick"/>
    <Button
        android:id="@+id/btn_num0"
        android:layout_row="3"
        android:layout_column="4"
        android:text="0"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/holo_green_light"
        android:onClick="btnNumClick"/>

    <Button
        android:id="@+id/btn_p"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:text="더하기"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/holo_purple"
        android:onClick="btnCalcClick"/>

    <Button
        android:id="@+id/btn_mi"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:text="빼기"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/holo_red_light"
        android:onClick="btnCalcClick"/>

    <Button
        android:id="@+id/btn_mul"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:text="곱하기"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/holo_blue_bright"
        android:onClick="btnCalcClick"/>

    <Button
        android:id="@+id/btn_d"
        android:layout_row="7"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:text="나누기"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/holo_orange_dark"
        android:onClick="btnCalcClick"/>

    <TextView
        android:id="@+id/tv_calcResult"
        android:layout_row="8"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:text="계산결과 :"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:textColor="@android:color/holo_red_dark" />

</GridLayout>